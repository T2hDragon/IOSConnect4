<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name = "gameCircle" parent = "Widget.AppCompat.ImageButton" >
        <item name="android:layout_width">0dp</item>
        <item name="android:contentDescription">@string/circle_image_name</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/circle_default</item>
        <item name="android:visibility">invisible</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name = "gameColumn"  parent = "Widget.AppCompat.Button" >\
        <item name="android:contentDescription">@string/columnButton_name</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/game_column</item>
        <item name="android:onClick">gameColumnOnClick</item>
    </style>

</resources>